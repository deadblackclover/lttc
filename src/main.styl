@font-face
  font-family Kaushan
  src url('../src/font/Kaushan.ttf')

@keyframes btnh {
  from { background-size: 100% }
  50% { background-size: 105% }
  to { background-size: 100% }
}

body
  margin 0
  background-image url('https://picsum.photos/1440/900?random')
  font-family Arial
  @media (max-width: 450px)
    display flex
    flex-direction row
    justify-content center
    align-item center

a, a:visited, a:active, a:hover
  text-decoration none
  color black
  font-family Kaushan

h1
  font-family Kaushan

iframe
  visibility hidden
  display none
  position absolute
  top 0

#app
  display flex
  flex-direction row
  justify-content space-between
  @media (max-width: 450px)
    flex-direction column

.block
  margin-top 20px
  background-color white
  width 200px
  padding 10px
  @media (max-width: 450px)
    margin-top 0px
  @media (min-width: 450px)
    box-shadow 0 0 10px black

.control
  display flex
  flex-direction row
  justify-content center
  div
    background-repeat no-repeat
    width 35px
    height 35px
    
.play:hover, .pause:hover, .next:hover
  animation btnh 1s ease

.play
  background-image url('../src/img/play.png')

.pause
  background-image url('../src/img/pause.png')

.next
  background-image url('../src/img/forward.png')

.vol
  display flex
  flex-direction row
  input
    width 80%

.btn
  margin 5px
  &:hover
    text-shadow 0 0 5px #c3c3c3

.active
  font-weight bold
  &:before
    content '* '

.author
  @media (max-width: 450px)
    display none